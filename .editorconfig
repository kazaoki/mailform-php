root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
tab_width = 4

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 2

[html/form-core/**/*.php]
indent_style = space
indent_size = 4

[*.js]
indent_style = tab
indent_size = 4

[*.ts]
indent_style = tab
indent_size = 4

[*.css]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2
